@using TransportGlobalWeb.UI.Enums.TransportContextEnums;
@model UpdateTransportRequestModel

<h1>Update Transport Request</h1>

<form asp-action="UpdateTransportRequest" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="ID" />
    </div>

    <div class="form-group">
        <label asp-for="TransportType">Vehicle Type</label>
        <select asp-for="TransportType" class="form-control">
            @foreach (TransportType transportType in Enum.GetValues<TransportType>())
            {
                if (Model.TransportType == transportType)
                {
                    <option value="@transportType" selected>@transportType</option>
                }
                else
                {
                    <option value="@transportType">@transportType</option>
                }
            }
        </select>
        <span asp-validation-for="TransportType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight</label>
        <input type="text" class="form-control" id="Weight" name="Weight" value="@Model.Weight" required>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight</label>
        <input type="text" class="form-control" id="Volume" name="Volume" value="@Model.Volume" required>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight</label>
        <input type="text" class="form-control" id="LoadingAddress" name="LoadingAddress" value="@Model.LoadingAddress" required>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight</label>
        <input type="text" class="form-control" id="DeliveryAddress" name="DeliveryAddress" value="@Model.DeliveryAddress" required>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>


