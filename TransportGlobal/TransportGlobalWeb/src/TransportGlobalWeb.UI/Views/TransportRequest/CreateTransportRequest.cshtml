@using TransportGlobalWeb.UI.Enums.TransportContextEnums;

@model CreateTransportRequestModel

<h1>Create Employee</h1>

<form asp-action="CreateTransportRequest" method="post">
    <div class="form-group">
        <label asp-for="TransportType">Transport Type</label>
        <select asp-for="TransportType" class="form-control">
            @foreach (TransportType transportType in Enum.GetValues<TransportType>())
            {
                <option value="@transportType">@transportType</option>
            }
        </select>
        <span asp-validation-for="TransportType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight</label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Volume">Volume</label>
        <input asp-for="Volume" class="form-control" type="number" step="0.01" />
    </div>

   <div class="form-group">
        <label asp-for="TransportDate">TransportDate</label>
        <input asp-for="TransportDate" type="date" class="form-control">
   </div>

    <div class="form-group">
        <label asp-for="LoadingAddress">Loading Address</label>
        <input asp-for="LoadingAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DeliveryAddress">Delivery Address</label>
        <input asp-for="DeliveryAddress" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>

