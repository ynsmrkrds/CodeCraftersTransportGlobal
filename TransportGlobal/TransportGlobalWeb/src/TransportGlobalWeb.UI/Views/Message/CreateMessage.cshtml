@model CreateMessageRequestModel

<h2>Send Message</h2>

<form asp-action="CreateMessage" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="ChatID" value=@((int)ViewData["ChatID"]!) />
    </div>
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <input required asp-for="Content" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
