@using TransportGlobalWeb.UI.Models.RequestModels.ReviewContextRequestModels.Review;
@model CreateReviewRequestModel

<h1>Review</h1>

<form asp-action="CreateReview" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="TransportContractID" value=@((int)ViewData["TransportContractID"]!) />
    </div>
    <div class="form-group">
        <label asp-for="Score">Vehicle</label>
        <select asp-for="Score" class="form-control">
            @for(int i=1; i<=5; i++)
            {
                if (i == 5)
                {
                    <option value=@i selected>@i</option>
                }
                else
                {
                    <option value=@i>@i</option>
                }
            }
        </select>
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment">Comment</label>
        <textarea asp-for="Comment" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
