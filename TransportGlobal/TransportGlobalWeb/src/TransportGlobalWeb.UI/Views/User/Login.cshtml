@using TransportGlobalWeb.UI.Models.RequestModels.UserContextRequestModels.User;
@model LoginRequestModel

<h2>Login</h2>

<form asp-controller="User" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" required asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" required type="password" asp-for="Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>