@using TransportGlobalWeb.UI.Models.ViewModels.UserContextViewModels;
@model UserViewModel

<h2>Profile</h2>

<div>
    <hr />
    <dl class="row">       
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Surname
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            User Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")
        </dd>
    </dl>
</div>

<div class="d-flex flex-row">
    <div>
        <a asp-action="UpdatePassword" asp-controller="User" class="btn btn-primary">Update Password</a>
    </div>
    <div style="margin: 12px;"></div>
    <div>
        <a asp-action="UpdateProfile" asp-controller="User" class="btn btn-primary">Update Profile</a>
    </div>
</div>
