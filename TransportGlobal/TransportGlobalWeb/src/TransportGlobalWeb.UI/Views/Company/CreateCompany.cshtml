@model CreateCompanyRequestModel

<h2>Create Company</h2>

<form asp-action="CreateCompany" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input required asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input required asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input required asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input required asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
